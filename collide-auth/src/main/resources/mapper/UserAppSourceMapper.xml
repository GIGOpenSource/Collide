<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gig.collide.auth.infrastructure.mapper.UserAppSourceMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.gig.collide.auth.domain.entity.UserAppSource">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="app_id" property="appId" />
        <result column="device_info" property="deviceInfo" />
        <result column="first_login_time" property="firstLoginTime" />
        <result column="last_login_time" property="lastLoginTime" />
        <result column="login_count" property="loginCount" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, user_id, app_id, device_info, first_login_time, last_login_time, login_count, create_time, update_time
    </sql>

    <!-- 根据用户ID和应用ID查询用户应用来源 -->
    <select id="selectByUserIdAndAppId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_user_app_source
        WHERE user_id = #{userId}
        AND app_id = #{appId}
    </select>

    <!-- 更新用户登录信息 -->
    <update id="updateLoginInfo">
        UPDATE t_user_app_source 
        SET last_login_time = #{loginTime},
            device_info = #{deviceInfo},
            login_count = login_count + 1,
            update_time = NOW()
        WHERE user_id = #{userId}
        AND app_id = #{appId}
    </update>

</mapper> 