<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gig.collide.auth.infrastructure.mapper.OAuthApplicationMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.gig.collide.auth.domain.entity.OAuthApplication">
        <id column="id" property="id" />
        <result column="app_key" property="appKey" />
        <result column="app_name" property="appName" />
        <result column="app_type" property="appType" />
        <result column="package_name" property="packageName" />
        <result column="description" property="description" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, app_key, app_name, app_type, package_name, description, status, create_time, update_time
    </sql>

    <!-- 根据应用Key查询激活的应用 -->
    <select id="selectActiveByAppKey" parameterType="string" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_oauth_application
        WHERE app_key = #{appKey}
        AND status = 'active'
    </select>

</mapper> 