<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gig.collide.goods.infrastructure.mapper.GoodsMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.gig.collide.goods.domain.entity.Goods">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="price" property="price" jdbcType="DECIMAL"/>
        <result column="image_url" property="imageUrl" jdbcType="VARCHAR"/>
        <result column="stock" property="stock" jdbcType="INTEGER"/>
        <result column="sold_count" property="soldCount" jdbcType="INTEGER"/>
        <result column="subscription_days" property="subscriptionDays" jdbcType="INTEGER"/>
        <result column="coin_amount" property="coinAmount" jdbcType="INTEGER"/>
        <result column="recommended" property="recommended" jdbcType="BOOLEAN"/>
        <result column="hot" property="hot" jdbcType="BOOLEAN"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="creator_id" property="creatorId" jdbcType="BIGINT"/>
        <result column="deleted" property="deleted" jdbcType="BOOLEAN"/>
        <result column="version" property="version" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 基础查询字段 -->
    <sql id="Base_Column_List">
        id, name, description, type, status, price, image_url, stock, sold_count,
        subscription_days, coin_amount, recommended, hot, create_time, update_time,
        creator_id, deleted, version
    </sql>

    <!-- 分页查询商品（基础查询） -->
    <select id="pageQuery" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM goods
        WHERE deleted = 0
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <if test="type != null and type != ''">
            AND type = #{type}
        </if>
        <if test="keyword != null and keyword != ''">
            AND (name LIKE CONCAT('%', #{keyword}, '%') 
                 OR description LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        ORDER BY recommended DESC, hot DESC, sort_weight DESC, create_time DESC
    </select>

    <!-- 分页查询推荐商品 -->
    <select id="pageQueryRecommended" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM goods
        WHERE deleted = 0
          AND recommended = 1
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        ORDER BY sort_weight DESC, create_time DESC
    </select>

    <!-- 分页查询热门商品 -->
    <select id="pageQueryHot" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM goods
        WHERE deleted = 0
          AND hot = 1
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        ORDER BY sold_count DESC, sort_weight DESC, create_time DESC
    </select>

    <!-- 获取推荐商品列表 -->
    <select id="selectRecommendedGoods" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM goods
        WHERE deleted = 0
          AND recommended = 1
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        ORDER BY sort_weight DESC, create_time DESC
        <if test="limit != null and limit > 0">
            LIMIT #{limit}
        </if>
    </select>

    <!-- 获取热门商品列表 -->
    <select id="selectHotGoods" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM goods
        WHERE deleted = 0
          AND hot = 1
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        ORDER BY sold_count DESC, sort_weight DESC, create_time DESC
        <if test="limit != null and limit > 0">
            LIMIT #{limit}
        </if>
    </select>

    <!-- 批量更新商品状态 -->
    <update id="batchUpdateStatus">
        UPDATE goods
        SET status = #{status}, update_time = NOW()
        WHERE id IN
        <foreach collection="goodsIds" item="goodsId" open="(" separator="," close=")">
            #{goodsId}
        </foreach>
        AND deleted = 0
    </update>

    <!-- 根据创建者ID查询商品 -->
    <select id="selectByCreatorId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM goods
        WHERE deleted = 0
          AND creator_id = #{creatorId}
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        ORDER BY create_time DESC
    </select>

</mapper> 