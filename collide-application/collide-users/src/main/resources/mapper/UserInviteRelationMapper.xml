<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gig.collide.users.infrastructure.mapper.UserInviteRelationMapper">

    <!-- 根据用户ID查询邀请关系 -->
    <select id="findByUserId" parameterType="long" resultType="com.gig.collide.users.domain.entity.UserInviteRelation">
        SELECT * FROM t_user_invite_relation 
        WHERE user_id = #{userId}
    </select>

    <!-- 根据邀请人ID查询被邀请用户列表 -->
    <select id="findByInviterId" parameterType="long" resultType="com.gig.collide.users.domain.entity.UserInviteRelation">
        SELECT * FROM t_user_invite_relation 
        WHERE inviter_id = #{inviterId} 
        ORDER BY create_time DESC
    </select>

    <!-- 统计邀请人的邀请数量 -->
    <select id="countByInviterId" parameterType="long" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM t_user_invite_relation 
        WHERE inviter_id = #{inviterId}
    </select>

    <!-- 根据邀请码查询邀请关系 -->
    <select id="findByInviteCode" parameterType="string" resultType="com.gig.collide.users.domain.entity.UserInviteRelation">
        SELECT * FROM t_user_invite_relation 
        WHERE invite_code = #{inviteCode} 
        ORDER BY create_time DESC
    </select>

</mapper> 