<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="app.name" source="spring.application.name"/>
    
    <!-- 根据环境选择不同的日志路径 -->
    <springProfile name="docker">
        <!-- Docker环境：使用容器内的日志目录 -->
        <property name="LOG_PATH" value="/app/logs"/>
    </springProfile>
    
    <springProfile name="prod">
        <!-- 生产环境部署：使用固定路径（适配systemd部署） -->
        <property name="LOG_PATH" value="${user.home}/${app.name}/logs"/>
    </springProfile>
    
    <springProfile name="!docker &amp; !prod">
        <!-- 开发环境：使用用户主目录 -->
        <property name="LOG_PATH" value="${user.home}/${app.name}/logs"/>
    </springProfile>
    
    <property name="LOG_FILE" value="${LOG_PATH}/application.log"/>
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n"/>

    <appender name="APPLICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <maxFileSize>50MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 添加异步 appender，提高性能 -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>20</discardingThreshold>
        <queueSize>1024</queueSize>
        <includeCallerData>true</includeCallerData>
        <neverBlock>true</neverBlock>
        <appender-ref ref="APPLICATION"/>
    </appender>

    <!-- Docker环境优先使用控制台输出 -->
    <springProfile name="docker">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC"/>
        </root>
    </springProfile>
    
    <!-- 生产环境：文件输出为主 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ASYNC"/>
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    
    <!-- 开发环境：主要使用控制台输出 -->
    <springProfile name="!docker &amp; !prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
</configuration>